from minio/mc:RELEASE.2020-12-18T10-53-53Z
RUN MINIO_HOST=${MINIO_HOST}
RUN MINIO_ACCESS_KEY=${MINIO_ACCESS_KEY}
RUN $MINIO_SECRET_KEY=${$MINIO_SECRET_KEY}
RUN mc config host add --quiet --api s3v4 minioblobstore http://$MINIO_HOST:9000 $MINIO_ACCESS_KEY $MINIO_SECRET_KEY
ENTRYPOINT ['/bin/bash','mc']